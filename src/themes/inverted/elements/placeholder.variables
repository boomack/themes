
/* Glow Gradient */
@placeholderLoadingGradient: linear-gradient(to right,
  rgba(0, 0, 0, 0.08) 0,
  rgba(0, 0, 0, 0.15) 15%,
  rgba(0, 0, 0, 0.08) 30%
);
@placeholderInvertedLoadingGradient: linear-gradient(to right,
  rgba(255, 255, 255, 0.08) 0,
  rgba(255, 255, 255, 0.14) 15%,
  rgba(255, 255, 255, 0.08) 30%
);
