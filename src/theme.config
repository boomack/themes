/* Collections */
@breadcrumb : 'negative';
@form       : 'negative';
@grid       : 'negative';
@menu       : 'negative';
@message    : 'negative';
@table      : 'negative';

/* Modules */
@accordion  : 'negative';
@calendar   : 'negative';
@checkbox   : 'negative';
@dimmer     : 'negative';
@dropdown   : 'negative';
@embed      : 'negative';
@modal      : 'negative';
@nag        : 'negative';
@popup      : 'negative';
@progress   : 'negative';
@slider     : 'negative';
@rating     : 'negative';
@search     : 'negative';
@shape      : 'negative';
@sidebar    : 'negative';
@sticky     : 'negative';
@tab        : 'negative';
@toast      : 'negative';
