/* Elements */
@button     : 'negative';
@container  : 'negative';
@divider    : 'negative';
@emoji      : 'negative';
@flag       : 'negative';
@header     : 'negative';
@icon       : 'negative';
@image      : 'negative';
@input      : 'negative';
@label      : 'negative';
@list       : 'negative';
@loader     : 'negative';
@placeholder: 'negative';
@rail       : 'negative';
@reveal     : 'negative';
@segment    : 'negative';
